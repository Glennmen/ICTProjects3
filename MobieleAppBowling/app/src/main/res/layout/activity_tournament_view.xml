<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ictprojects.mobieleappbowling.tournamentView">

    <TextView
    android:id="@+id/TournamentName"
    android:text="@string/tournamentName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:textSize="20dp"/>

    <TextView
        android:id="@+id/Date"
        android:text="@string/date"
        android:layout_below="@+id/TournamentName"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accept"
        android:id="@+id/btnaccept"
        android:layout_below="@+id/Date"
        android:layout_alignLeft="@+id/TournamentName"
        android:layout_alignStart="@+id/TournamentName"
        android:layout_marginTop="52dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/decline"
        android:id="@+id/btnDecline"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/TournamentName"
        android:layout_alignEnd="@+id/TournamentName" />


</RelativeLayout>
